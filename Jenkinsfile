                    echo "  STEP 4: Fix #3 â€” Add IMDSv2 to aws_instance:"
                    echo "          metadata_options {"
                    echo "            http_tokens = required"
                    echo "          }"
                    echo ""
                    echo "  STEP 5: Fix #4 â€” Restrict egress in security group"
                    echo ""
                    echo "  STEP 6: Push to GitHub and re-run pipeline"
                    echo ""
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"

                    # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
                    # FINAL DECISION â€” Fail if CRITICAL found
                    # â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
                    echo ""
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                    echo "              âš–ï¸  PIPELINE DECISION                   "
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"

                    if [ "$CRITICAL_COUNT" -gt "0" ]; then
                        echo ""
                        echo "  âŒ RESULT   : FAILED"
                        echo "  ğŸ“Š REASON   : $CRITICAL_COUNT CRITICAL issue(s) found"
                        echo "  ğŸ”´ POLICY   : Zero CRITICAL tolerance"
                        echo "  ğŸ“‹ ACTION   : Fix vulnerabilities listed above"
                        echo "  ğŸ¤– NEXT     : Use AI to remediate terraform/main.tf"
                        echo ""
                        echo "  â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
                        echo "  â•‘  âŒ BUILD FAILED â€” INSECURE INFRASTRUCTURE â•‘"
                        echo "  â•‘  Fix all CRITICAL issues before deploying  â•‘"
                        echo "  â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                        exit 1
                    else
                        echo ""
                        echo "  âœ… RESULT   : PASSED"
                        echo "  ğŸ“Š REASON   : Zero CRITICAL issues found"
                        echo "  ğŸŸ¢ STATUS   : Safe to proceed with deployment"
                        echo ""
                        echo "  â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
                        echo "  â•‘  âœ… SCAN PASSED â€” INFRASTRUCTURE IS SECURE â•‘"
                        echo "  â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                    fi
                '''
            }

            post {
                always {
                    echo 'ğŸ“„ Archiving security reports...'
                    archiveArtifacts artifacts: 'trivy-full-report.txt',
                                     allowEmptyArchive: true
                    archiveArtifacts artifacts: 'trivy-report.json',
                                     allowEmptyArchive: true
                }
                failure {
                    echo ''
                    echo 'âŒ SCAN FAILED â€” See vulnerability details above'
                    echo 'ğŸ“‹ Copy the report and use AI for remediation'
                    echo 'ğŸ”— Then update terraform/main.tf and re-push'
                }
                success {
                    echo 'âœ… SCAN PASSED â€” Zero critical vulnerabilities!'
                }
            }
        }


        // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
        // STAGE 3: TERRAFORM PLAN
        // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
        stage('Stage 3: Terraform Plan') {
            steps {
                echo 'â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—'
                echo 'â•‘      STAGE 3: TERRAFORM PLAN             â•‘'
                echo 'â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•'

                sh '''
                    cd terraform

                    echo "ğŸ”§ Running terraform init..."
                    echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
                    terraform init

                    echo ""
                    echo "âœ… Running terraform validate..."
                    echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
                    terraform validate

                    echo ""
                    echo "ğŸ“Š Running terraform plan..."
                    echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
                    terraform plan \
                        -var="aws_region=us-east-1" \
                        -var="environment=demo"

                    echo ""
                    echo "âœ… Terraform plan complete!"
                '''
            }

            post {
                success {
                    echo 'âœ… Terraform plan successful â€” ready to apply!'
                }
                failure {
                    echo 'âŒ Terraform plan failed â€” check AWS credentials'
                }
            }
        }
    }


    post {
        success {
            echo '''
            â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
            â•‘        âœ… FULL PIPELINE PASSED!                  â•‘
